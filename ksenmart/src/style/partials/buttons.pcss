/* Кнопка развёрт    + -
==================================== */

.collapse-btn {
    display: block;
    position: relative;
    height: 2rem;
    width: 2rem;
    background: transparent;
}

.collapse-btn span,
.collapse-btn span::before
{
  position: absolute;
  height: .2rem; margin-top: -.1rem;
  width: 1.6rem; margin-left: -.8rem;
  background-color: #B5B5B5;
  top: 50%;
  left: 50%;
  transition: .5s;
  
}

.collapse-btn span::before {
  content: '';
  display: block;
  
} 

.collapse-btn__active span {
  transform: rotate(90deg);
}
.collapse-btn__active span:before {
  transform: rotate(-270deg);
}

