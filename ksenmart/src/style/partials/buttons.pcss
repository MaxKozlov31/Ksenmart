/* Разворачивающаяся кнопка
====================================== */

.btn-choice {

width: 25.5rem;

}

.btn-tab {
    position: relative;
    margin-bottom: 1px;
    width: 100%;
    color: #333;
    overflow: hidden;
    border-radius: 5px;
    border: 1px solid #DEDEDE;
    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.18);

    font-size: 1.3rem;
    line-height: 130%;

    &>input {
        position: absolute;
        opacity: 0;
        z-index: -1;

        &:checked ~ .btn-tab-content {
            max-height: 100px;
        }
    }

    &>label {
        position: relative;
        display: block;
        padding: 0 0 0 1em;
        background: #F0F0F0;
        font-weight: bold;
        line-height: 3;
        cursor: pointer;

        &::after {
            position: absolute;
            right: 0;
            top: 0;
            display: block;
            width: 3em;
            height: 3em;
            line-height: 3;
            text-align: center;
            -webkit-transition: all .35s;
            -o-transition: all .35s;
            transition: all .35s;
        }
    }

    &-content {
        max-height: 0;
        overflow: hidden;
        background: #fff;
        -webkit-transition: max-height .35s;
        -o-transition: max-height .35s;
        transition: max-height .35s;

        &>p {
            padding: 1em;
            transition: all .35s easy;
            cursor: pointer;

            &:hover {
                background: #4EB7F0;
                
                &>a {
                    color: #fff;
                }
            }
        }
    }
}
/* Icon */

.btn-tab input[type=checkbox] + label::after {
    font-family: 'Font Awesome 5 Free', 'Font Awesome 5 Brands';
    content: "\f107";
}

.btn-tab input[type=checkbox]:checked + label::after {
transform: rotate(180deg);
}

