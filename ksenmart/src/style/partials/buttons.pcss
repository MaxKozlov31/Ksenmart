.modal__close {
    position: absolute;
    top: 2.2rem;
    right: 2.2rem;
    z-index: 1;
    cursor: pointer;
    
    padding: 0;
    background: none;
    border: 0;

    transition: transform .2s linear;

    &:hover {

        transform: translateY(-1px);
    }
}

