/* Buttons
================== */
button {
    cursor: pointer;
    outline: none;
}

.btn {
    height: 4.8rem;
    position: relative;
    border-radius: .5rem;
    border: none;
    outline: none;
    box-shadow: 0 .1rem .3rem rgba(0, 0, 0, 0.18);
    
    font-size: 1.3rem;
    color: #fff;
    cursor: pointer;    

    transition: all .1s ease;

    &_mini {
        height: 4rem;
    }

    &_micro {
        width: 19rem;
        height: 2.8rem;

    }

    &-accessories {
        background: #fff;
        color: #2B8BBF;
        border: .1rem solid #dedede;
        box-shadow: none;

        margin-top: 2rem;

        &:hover {
            box-shadow: 0 .1rem .3rem rgba(0, 0, 0, 0.18);
        }
    }

    &_nano {
        height: 1.9rem;
    }

    /* Градиент при наведении
    ============================*/
    &_gradient {
        &> span{
            
            position: relative;
            vertical-align: middle;

            z-index: 1;
        }

        &:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: .5rem;
            border: none;
            outline: none;
            box-shadow: 0px .1rem .3rem rgba(0, 0, 0, 0.18);
            background: linear-gradient(to top, rgba(255, 255, 255, 0.2) 0%, rgba(0, 0, 0, 0.0) 100%);
            opacity: 0;
            transition: 0.3s;
        }

        &:hover:before {
            opacity: 1;
        }
    }
    /* ========================= */

    &_AddToCart {
        width: 20.5rem;
        height: 4rem;
        background: #FC7B54;

        color: #fff;
        font-size: 1.3rem;
        line-height: 130%;
    }

    &-AddToCart {
        width: 29rem;
        height: 4rem;
        background: #FC7B54;

        color: #fff;
        font-size: 1.3rem;
        line-height: 130%;
    }

    &-like {
        background: #FC7B54;
        width: 4rem;
        height: 4rem;

        .fa-heart {
            color: #fff;
            font-size: 1.5rem;
        }
    }

    &_to-shopping {
        width: 29.1rem;
        background: #FC7B54;
    
        color: #FFFFFF;
        font-size: 1.3rem;
        text-transform: uppercase;
        letter-spacing: 0.07rem;
    
        margin: 2.1rem 0 0 6.7rem;

        @media (--mobile-sm) {
            text-transform: inherit;
            margin: 0 auto;
        }
    }

    &_stock {
        width: 22.1rem;
        height: 4rem;
        margin: 0;
        text-transform: none;
        letter-spacing: 0rem;
    }

    &-respond {
        width: 19rem;
        height: 4rem;
        background: #4EB7F0;
        color: #FFFFFF;
    }

    &-more-reviews {
        width: 52.8rem;
        height: 4.8rem;
        text-transform: uppercase;
        font-weight: bold;
        font-size: 1.3rem;
        line-height: 1.7rem;
        color: #7C7C7C;
        background: linear-gradient(180deg, #F7F7F7 0%, #F0F0F0 100%);
        margin-left: 20%;

        &>span {
            vertical-align: baseline;
        }

        
    }

    &-reviews-prompt {
        background: #4EB7F0;
        width: 14rem;
        height: 4rem;
        font-size: 1.3rem;
        line-height: 1.7rem;
        color: #fff;

    }

    &-reviews {
        background: #4EB7F0;
        height: 4rem;
        width: 19rem;

    }
    

    &-checkout {
        width: 100%;
        height: 4rem;
        background: #FC7B54;
    }


}

.header__catalog-btn {
    position: relative;
    display: flex;
    align-items: center;
    width: 14.4rem;
    background: #2B8BBF;
    text-transform: uppercase;

    margin-right: 1.4rem;
    padding: 0 1.5rem;

    &_orange {
        background: #FC7B54;
        margin-left: 0;
    }

    &_active span {
        height: 0;
        transform: translateY(-.2rem);

        &:before {
            transform: rotate(-45deg);
        }

        &:after {
            transform: rotate(45deg);
        }
        
    }

    @media (--desktop) {
        width: 12rem;
    }

    @media (--tablet-lg) {
        padding: 5px;
        width: 7rem;
        display: flex;
        flex-direction: column;
        text-transform: inherit;
    }

    @media   (--mobile-sm) {
        display: none;
    }
}

.burger {
    position: relative;
    display: inline-block;
    width: 2rem;
    height: .2rem;
    background-color: #fff;
    border-radius: 1rem;
    

    margin-right: 15.7%;

    &:before,
    &:after {
        display: block;
        content: "";
        width: 2rem;
        height: .2rem;
        border-radius: 1rem;

        background-color: #fff;
        left: 0;
        position: absolute;
        z-index: 1;
        transition: .2s;
    }

    &:before {
        transform: translateY(.6rem);
    }

    &:after{
        transform: translateY(-.6rem);
    }

    &_position {
        left: -1.2rem;
        top: -0.4rem;
    }

}

.circle-btn {

    width: 4rem;
    height: 4rem;
    border-radius: 5rem;
    background: #2D5A79;
    border: none;
    outline: none;
    cursor: pointer;
    
    margin-left: 1.6rem;

    &_light {
        background: #F3F3F3;
    }

    &__person {
        background-image: url("../img/person.jpg"); 
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        display: inline-block;
    }

    &__liked {
        @media   (--tablet-lg) {
            display: none;   
        }
    }

    &__basket {
        
    }
}


.btn_expend {
